@{
    ViewData["Title"] = "Create User";
}

@model Learning_App.Models.Course

<div class="page">
    <div class="content">
        <div class="form-card">
            <form class="form-signup" method="post" asp-controller="home" asp-action="createUserAction">
                <h1 class="h1 mb-3 fw-normal text-white"><b>МПТ-Kurs</b></h1>
                <h1 class="h5 mb-3 fw-normal text-white">Добавить нового пользователя!</h1>

                <div class="form-floating">
                    <input type="text" name="firstName" class="form-control input-not-last" id="floatingInput" placeholder="Enter your first name" required autofocus>
                    <label for="floatingInput">Фамилия</label>
                </div>
                <div class="form-floating">
                    <input type="text" name="lastName" class="form-control input-not-last" id="floatingInput" placeholder="Enter your last name" required>
                    <label for="floatingInput">Имя</label>
                </div>
                <div class="form-floating">
                    <input type="email" name="email" class="form-control input-not-last" id="floatingInput" placeholder="name@example.com" required email>
                    <label for="floatingInput">Email</label>
                </div>
                <div class="form-floating">
                    <input type="password" name="password" class="form-control input-last" id="floatingPassword" placeholder="Password" required password>
                    <label for="floatingPassword">Пароль</label>
                </div>
                <div class="form-floating">
					<select required class="form-select" name="role" id="floatingSelect" aria-label="Floating label select example">
		
						<option selected value="1">Студент</option>
						<option value="2">Учитель</option>
						<option value="99">Админ</option>
					</select>
					<label for="floatingSelect">Роль</label>

                <button class="w-100 mt-3 btn btn-lg btn-warning" type="submit">Создать</button>
                @if (ViewBag.error != null)
                {
                    <div class="alert alert-danger mt-3" role="alert">
                        @ViewBag.error
                    </div>
                }
                <p class="mt-5 mb-3 text-light">© 2023</p>
            </form>
        </div>
    </div>
</div>
<style>
    .page {
        width: 100%;
        height: 100vh;
    }

    .content {
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .form-card {
        width: 100%;
        max-width: 330px;
        padding: 15px;
        margin: auto;
    }

    .input-not-last {
        margin-bottom: -1px;
        border-bottom-right-radius: 0;
        border-bottom-left-radius: 0;
    }

    .input-last {
        margin-bottom: 10px;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
    }

    .form-signin .form-floating:focus-within {
        z-index: 2;
    }
</style>
